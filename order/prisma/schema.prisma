datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
  default  = true
}

generator photon {
  provider = "photonjs"
}

enum OrderStatus {
  COLLECTING
  PAYED
  SHIPPING
  COMPLETE
  FAILED
  CANCELLED
}

model ItemRecord {
  itemId String
  amount Int
}

model Order {
  id    String  @default(cuid()) @id
  status OrderStatus
  totalCost Int
  totalAmount Int
  itemDto ItemRecord[]
}