type Item {
  id: ID! @id
  name: String
  amount: Int
  price: Int
}

enum OrderStatus {
  COLLECTING
  PAYED
  SHIPPING
  COMPLETE
  FAILED
  CANCELLED
}

enum PaymentStatus {
  COMPLETE
  FAILED
  CANCELLED
  PENDING
}

type Payment {
  id: ID! @id
  status: OrderStatus
}

type Order {
  id: ID! @id
  status: OrderStatus
  username: String
  totalCost: Int
  totalAmount: Int
  itemDto: ItemRecord[]
}

type ItemRecord {
  item: Item 
  amount: Int
}
